@page
@model ZDrive.Pages.CarPages.DeleteCarModel
@{
}

<h1>Delete Car</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Car.Licenseplate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Car.Licenseplate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Car.NumberOfSeats)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Car.NumberOfSeats)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Car.SizeOfCar)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Car.SizeOfCar)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Car.UserId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Car.UserId)
            </dd>
        </dl>

        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure? This will also delete all routes with this car')" />
    </form>
    <div>
        <a asp-route-uid="@Model.Car.UserId" asp-page="/CarPages/UserCars">Back to List</a>
    </div>
</div>