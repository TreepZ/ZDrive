@page
@model ZDrive.Pages.CarPages.UserCarsModel
@{
}
<div class="text-center">
    <h1>@Model.ZUser.UserName's Cars</h1>
</div>
<a asp-page="/CarPages/CreateCar" asp-route-userID="@Model.ZUser.UserId" class="btn btn-primary m-3">Add Car</a>
@foreach (var car in Model.Cars)
{
    <div class="shadow card m-3">
        <div class="card-body p-3">
            <h5 class="card-text">License Plate @car.Licenseplate</h5>
            <h5 class="card-text">Number of seats @car.NumberOfSeats</h5>
            <h5 class="card-text">Size @car.SizeOfCar</h5>
            <div class="d-flex justify-content-around mt-4 mb-2">
                <a class="btn btn-primary col-5" asp-page="UpdateCar" asp-route-cid="@car.Licenseplate">Update Car</a>
                <a class="btn btn-primary col-5" asp-page="DeleteCar" asp-route-cid="@car.Licenseplate">Delete</a>
            </div>
        </div>
    </div>
}