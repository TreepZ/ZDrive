}
<h1>Delete Route Stop</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <form method="post">
        @*Hidden input fields for OnPost method. Remove these, and the instance will become NULL in OnPost method*@
        <input asp-for="@Model.RouteStop.StopId" value="@Model.RouteStop.StopId" style="display:none" readonly />
        <input asp-for="@Model.RouteStop.RouteId" value="@Model.RouteStop.RouteId" style="display:none" readonly />

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RouteStop.StopId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RouteStop.StopId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RouteStop.RouteId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RouteStop.RouteId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RouteStop.StopAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RouteStop.StopAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RouteStop.StopTimestamp)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RouteStop.StopTimestamp)
            </dd>
        </dl>
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure?')" />
    </form>
    <div>
        <a asp-page="/UserPages/AllUsers">Back to List</a>
    </div>
