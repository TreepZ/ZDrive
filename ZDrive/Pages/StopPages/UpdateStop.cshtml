@page
@model ZDrive.Pages.StopPages.UpdateStopModel
@{
}
<div class="text-center">
    <h1>Update Stop</h1>
</div>
<form method="post" class="shadow card m-3">
    <div class="card-body p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Stop.StopId" />
        <div class="form-group">
            <label asp-for="Stop.RouteId" class="control-label"></label>
            <input asp-for="Stop.RouteId" value="@Model.Stop.RouteId" readonly class="form-control" />
            <span asp-validation-for="Stop.RouteId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Stop.StopAddress" class="control-label"></label>
            <input asp-for="Stop.StopAddress" class="form-control" />
            <span asp-validation-for="Stop.StopAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Stop.StopTimestamp" class="control-label"></label>
            <input asp-for="Stop.StopTimestamp" class="form-control" />
            <span asp-validation-for="Stop.StopTimestamp" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-around mt-4 mb-2">
            <input class="btn btn-primary col-5" type="submit" value="Update" />
            <a class="btn btn-primary col-5" asp-page="/RoutePages/UpateRoute" asp-route-rid="@Model.Stop.RouteId">
                Go back</a>
        </div>
    </div>
</form>