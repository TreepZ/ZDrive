@page
@model ZDrive.Pages.UserPages.CreateUserModel
@{
    ViewData["Title"] = "CreateUser";
}
<h1>Create New Event</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="User.UserType" class="form-control">
                    <option value="Driver">Driver</option>
                    <option value="Passenger">Passenger</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="User.UserName" class="control-label"></label>
                <input asp-for="User.UserName" class="form-control" />
                <span asp-validation-for="User.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.UserPass" class="control-label"></label>
                <input type="password" asp-for="User.UserPass" class="form-control" />
                <span asp-validation-for="User.UserPass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.UserEmail" class="control-label"></label>
                <input asp-for="User.UserEmail" class="form-control" />
                <span asp-validation-for="User.UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="/Pages/Index">Back to List</a>
</div>
