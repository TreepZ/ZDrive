@page
@model ZDrive.Pages.UserPages.UpdateUserModel
@{
    ViewData["Title"] = "UpdateUser";
}
<div class="text-center">
    <h1>Update User</h1>
</div>
<form method="post" class="shadow card m-3">
    <input type="hidden" readonly asp-for="@Model.User.AspUserId" />
    <div class="card-body p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="User.UserId" />
        <div class="form-group">
            <select asp-for="User.UserType" class="form-control">
                <option value="Driver">Driver</option>
                <option value="Passenger">Passenger</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="User.UserName" class="control-label"></label>
            <input asp-for="User.UserName" class="form-control" />
            <span asp-validation-for="User.UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="User.UserEmail" class="control-label"></label>
            <input asp-for="User.UserEmail" class="form-control" />
            <span asp-validation-for="User.UserEmail" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-around mt-4 mb-2">
            <input class="btn btn-primary col-5" type="submit" value="Update" />
            <a class="btn btn-primary col-5" asp-route-uid="@Model.User.AspUserId"
               asp-page="/UserPages/UserInfo">Go back</a>
        </div>
    </div>
</form>