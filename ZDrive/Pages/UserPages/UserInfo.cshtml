@page
@model ZDrive.Pages.UserPages.UserInfoModel
@{
}
<div class="float-left">
    <img height="300" width="300"
        src="https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png" />
    <div class="card">
        <div class="card-body">
            <p class="card-text float-left text-dark d-inline">Username:</p>
            <p class="card-text float-right text-info d-inline">@Model.Users.FirstOrDefault().UserName</p>
        </div>
        <div class="card-body">
            <p class="card-text float-left text-dark d-inline">E-mail:</p>
            <p class="card-text float-right text-info d-inline">@Model.Users.FirstOrDefault().UserEmail</p>
        </div>
        <div class="card-body">
            <p class="card-text float-left text-dark d-inline">Type:</p>
            <p class="card-text float-right text-info d-inline">@Model.Users.FirstOrDefault().UserType</p>
        </div>
        <div class="card-body">
            <p class="card-text float-left text-dark d-inline">Cars:</p>
            @if (Model.User.Cars.Count() != 0)
            {
                @foreach (var c in Model.User.Cars)
                {
                    <p class="card-text float-right text-info d-inline">@c.Licenseplate</p>
                }
            }
        </div>
        <div class="card-footer">
            <form class="form-inline"
                  method="post">
                <button type="submit" class="nav-link btn btn-secondary">Change My Type</button>
            </form>
            <br />
            <form class="form-inline"
                  method="post" asp-page-handler="Delete">
                <button type="submit" class="nav-link btn btn-danger">Delete Account</button>
            </form>
        </div>
    </div>
</div>

@if (Model.User.Routes.Count() != 0)
{
    @foreach (var r in Model.User.Routes)
    {
        <div class="card">
            <div class="card-body">
                <p class="card-text float-left text-light d-inline">Route</p>
                <p class="card-text float-right text-info d-inline">@r.RouteId</p>
            </div>
        </div>
    }
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Currently booked seat on routes</h3>
        @if (Model.ReservedSeats.Count() != 0)
        {
            @foreach (var r in Model.ReservedSeats)
            {
                <p class="card-text float-left text-light d-inline">Route</p>
                <p class="card-text float-right text-info d-inline">@r.RouteId</p>
            }
        }
    </div>
</div>